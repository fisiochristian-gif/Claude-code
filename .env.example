# ================================
# THE RD STATION - PRODUCTION ENVIRONMENT VARIABLES
# ================================
# Copy this file to .env and fill in your production values
# NEVER commit .env to git (it's in .gitignore)

# ================================
# SERVER CONFIGURATION
# ================================
NODE_ENV=production
PORT=3000

# Public URL of your Hostinger domain (NO trailing slash)
# Example: https://rdstation.example.com
PUBLIC_URL=https://your-domain.com

# ================================
# DATABASE
# ================================
# Path to SQLite database file (relative to server.js)
# Hostinger: Use absolute path or ./database.db
DATABASE_PATH=./database.db

# ================================
# SECURITY
# ================================
# Generate a strong secret key for session management
# Run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=CHANGE_THIS_TO_RANDOM_STRING_32_CHARS_MIN

# CORS allowed origins (comma-separated)
# Production: Set to your exact domain
CORS_ORIGIN=https://your-domain.com

# ================================
# SOCKET.IO
# ================================
# Socket.IO path (default: /socket.io)
SOCKET_PATH=/socket.io

# Socket.IO ping timeout (milliseconds)
SOCKET_PING_TIMEOUT=60000

# Socket.IO ping interval (milliseconds)
SOCKET_PING_INTERVAL=25000

# ================================
# CRON JOBS
# ================================
# Enable/disable automated cron jobs
ENABLE_MONTHLY_MINTING_CRON=true
ENABLE_MONTHLY_RESET_CRON=true
ENABLE_SOCIAL_VERIFICATION_CRON=false

# Cron schedule for monthly minting check (default: daily at midnight)
# Format: second minute hour day month weekday
MONTHLY_MINTING_CRON=0 0 * * *

# ================================
# BLOCKCHAIN (FUTURE)
# ================================
# Terra Classic LCD endpoint
TERRA_LCD_URL=https://terra-classic-lcd.publicnode.com

# Terra Classic Chain ID
TERRA_CHAIN_ID=columbus-5

# Lumos Luna SDK - MAINNET CONFIGURATION
# Leave empty for testnet, fill for mainnet bridge
LUMOS_API_KEY=
LUMOS_API_SECRET=
LUMOS_WEBHOOK_URL=

# ================================
# EXTERNAL APIs (OPTIONAL)
# ================================
# Reddit API (for upvote verification)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USERNAME=
REDDIT_PASSWORD=

# Twitter API (for like verification)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# Blogger API (for comment verification)
BLOGGER_API_KEY=

# ================================
# RATE LIMITING
# ================================
# Max requests per 15 minutes per IP
RATE_LIMIT_MAX=1000

# Rate limit window (milliseconds)
RATE_LIMIT_WINDOW=900000

# ================================
# LOGGING
# ================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# ================================
# ADMIN PANEL
# ================================
# Admin panel access password (optional basic auth)
ADMIN_PASSWORD=

# ================================
# PERFORMANCE
# ================================
# Max payload size (for JSON bodies)
MAX_PAYLOAD_SIZE=10mb

# Trust proxy (set to true on Hostinger)
TRUST_PROXY=true

# ================================
# BACKUP & MAINTENANCE
# ================================
# Enable automatic database backups
ENABLE_AUTO_BACKUP=true

# Backup interval (hours)
BACKUP_INTERVAL_HOURS=24

# Max backup files to keep
MAX_BACKUP_FILES=7
