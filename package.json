{
  "name": "lunc-horizon-dapp",
  "version": "2.0.0",
  "description": "The RD Station - Blockchain Gaming & Staking Hub for Terra Classic (LUNC)",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs rd-station",
    "pm2:monit": "pm2 monit",
    "test": "node -c server.js && echo 'Syntax check passed'",
    "db:init": "node scripts/init-database.js",
    "db:backup": "node scripts/backup-database.js",
    "deploy": "npm run test && npm install --production"
  },
  "keywords": [
    "lunc",
    "terra-classic",
    "blockchain",
    "dapp",
    "monopoly",
    "staking",
    "social-to-earn",
    "web3",
    "crypto"
  ],
  "author": "Rendite Digitali Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/rd-station.git"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5",
    "axios": "^1.6.0",
    "node-cron": "^3.0.3",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "optionalDependencies": {
    "pm2": "^5.3.0"
  }
}
